    frame.get_by_role("button", name="Add a New Value").click()
    frame.get_by_label("Run Control ID").fill(run_ctrl_id)
    frame.get_by_role("button", name="Add").click()

    try:
        # Checking if the Run Control ID altready exists
        expect(frame.get_by_text("Search Results")).to_be_visible(timeout=2000)

        required_section = frame.locator("table").filter(has_text="Search Results")
        required_section.get_by_text(run_ctrl_id, exact=True).click()

    except AssertionError as e:
        print("Adding new Run Control ID")
