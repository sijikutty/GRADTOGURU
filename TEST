from pywinauto import Application, Desktop

# Connect to the running Excel application
app = Application(backend="uia").connect(title="Microsoft Excel")

# Access the main Excel window
excel_window = app.window(title="Microsoft Excel")

# Access the Ribbon control
desktop = Desktop(backend="uia")
ribbon = desktop.window(title="Ribbon", control_type="Tab")

# Click on the "Review" tab
review_tab = ribbon.child_window(title="Review", control_type="TabItem")
review_tab.click_input()

