# Wait for the iframe to load and locate the frame by its content
iframe_locator = page.locator('iframe').locator('text="Specific Content Inside Iframe"').frame()
# Iterate through all iframes to find the right one
for iframe in page.frames:
    if 'ptModFrame' in iframe.name:  # or use any other unique check
        # Perform actions within this iframe
        iframe.locator('label:text("Server Name")').select_option("PSUNX")
        iframe.locator('#PRCSRQSTDLG_WRK_SELECT_FLAG\\$0').uncheck()
        iframe.locator('#PRCSRQSTDLG_WRK_SELECT_FLAG\\$0').check()
        iframe.locator('button:has-text("OK")').click()
        break
