   start_time = time.time()
    
    while time.time() - start_time < timeout:
        # Get the current value of the 4th column
        fourth_column_value = row_locator.locator("td:nth-child(4)").inner_text()
        
        # Check if it matches the expected value
        if fourth_column_value == expected_value:
            return True
        
        time.sleep(1)  # Wait a little before checking again
    
    raise TimeoutError(f"Timeout: waited {timeout} seconds for the 4th column to be '{expected_value}'.")
