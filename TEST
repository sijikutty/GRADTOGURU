import pandas as pd

# Define the base data that remains the same
base_data = {
    "key": "TC33990",
    "env": "Dev",
    "runflag": "N",
    "scenario": "test_Open_Item_Recon_SSJ2"
}

# Define different testdata for each row
testdata_variations = [
    {
        "Sheetname": "Open_item",
        "test_path": "C:/Github/corp_corpit_ps_egl_test_automation/UFT/Load_Journal_to_Template",
        "pssecretID": "dev/psgl/pia",
        "uftrespath": "C:/Github/corp_corpit_ps_egl_test_automation/Result/uftres.json",
        "Jrnldatapath": "C:/Github/corp_corpit_ps_egl_test_automation/Result/jrnldata.json",
        "macropath": "C:/Github/corp_corpit_ps_egl_test_automation/Load_Journal/JRNL1_WS_PT_860_FGL2D.xlsm"
    },
    {
        "Sheetname": "Another_item",
        "test_path": "C:/Some/Other/Path",
        "pssecretID": "prod/psgl/pia",
        "uftrespath": "C:/Some/Other/Path/uftres.json",
        "Jrnldatapath": "C:/Some/Other/Path/jrnldata.json",
        "macropath": "C:/Some/Other/Path/SomeFile.xlsm"
    }
]

# Combine the base data with each variation of testdata
combined_data = []
for testdata in testdata_variations:
    # Merge base data with each testdata variation
    row_data = {**base_data, **testdata}
    combined_data.append(row_data)

# Convert the combined data to a DataFrame
df = pd.DataFrame(combined_data)

# Specify the path for the Excel file
excel_file_path = "Result/tcjson.xlsx"

# Write the DataFrame to an Excel file
df.to_excel(excel_file_path, index=False)

print(f"Data has been written to {excel_file_path}")
