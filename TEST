frame.evaluate(f"""
                        var element = document.querySelector('{view_link_selector}');
                        if (element) {
                            element.scrollIntoView({{behavior: 'smooth', block: 'center'}});
                            setTimeout(function() {{
                                element.click();
                            }}, 100);  // Add a slight delay to ensure click event is registered
                        } else {
                            console.error('Element not found');
                        }
                    """)
