' Open Excel with the specific file (vv.xlsm)
objShell.Run "excel.exe """ & downloadsFolderPath & "\" & fullFileName & """", 1, True

' Wait for Excel to open
Wait 2 ' Adjust the wait time as needed

' Access the Excel window using WinObject
Set excelWindow = Window("regexpwndtitle:=Microsoft Excel.*")

' Access the Ribbon within the Excel window using WinObject
Set ribbon = excelWindow.WinObject("Ribbon")

' Select the "Add-ins" tab in the Ribbon
ribbon.WinTab("Name:=Add-ins").Select

' Access the Lower Ribbon within the Excel window using WinObject
Set lowerRibbon = excelWindow.WinObject("Lower Ribbon")

' Click the "nVisionDrill" button in the Lower Ribbon
lowerRibbon.WinButton("Name:=nVisionDrill").Click

' Access the Ribbon again to access the WinMenu
Set ribbon = excelWindow.WinObject("Ribbon")

' Select the "Drill" option from the WinMenu
ribbon.WinMenu("Name:=WinMenu").Select "Drill"
