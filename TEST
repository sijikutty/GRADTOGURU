    # List all iframes with the id starting with 'ptModFrame'
    iframes = page.query_selector_all("iframe[id^='ptModFrame']")

    # Example logic: choose the first iframe
    if not iframes:
        raise Exception("No iframes found")

    selected_iframe = iframes[0]  # Select the first iframe, or apply custom logic to choose

    # Get the content frame of the selected iframe
    frame = selected_iframe.content_frame()
    
    # Ensure the frame is fully loaded
    frame.wait_for_selector('input#ICSave[value="OK"]', state='attached')

    # Locate and click the "OK" button inside the selected iframe
    ok_button = frame.locator('input#ICSave[value="OK"]')
    ok_button.click()
