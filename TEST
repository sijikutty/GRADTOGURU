    # List all iframes with the id starting with 'ptModFrame'
    iframes = page.query_selector_all("iframe[id^='ptModFrame']")

    # Optionally, apply additional logic to choose the correct iframe
    # For example, select the first iframe if there's no specific criterion
    selected_iframe = iframes[0]  # Modify selection logic as needed

    # Ensure the iframe is loaded
    selected_iframe.wait_for()

    # Locate the "OK" button inside the selected iframe
    ok_button = selected_iframe.locator('input#ICSave[value="OK"]')
    ok_button.wait_for(state="visible")  # Ensure the button is visible
    ok_button.click()
