    # Wait for the iframe to be loaded and visible
    iframe = page.frame_locator("iframe#ptModFrame_7")

    # Ensure the iframe is loaded
    iframe.wait_for()

    # Locate the "OK" button within the iframe and click it
    # Use the most specific selector based on attributes of the button
    ok_button = iframe.locator('input#ICSave[value="OK"]')
    ok_button.wait_for(state="visible")  # Ensure the button is visible before clicking
    ok_button.click()
