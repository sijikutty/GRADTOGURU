' Import necessary Windows API functions
Private Declare Function FindWindow Lib "user32" Alias "FindWindowA" (ByVal lpClassName As String, ByVal lpWindowName As String) As Long
Private Declare Function ShowWindow Lib "user32" (ByVal hwnd As Long, ByVal nCmdShow As Long) As Long
Private Const SW_MAXIMIZE = 3

' Start Excel using SystemUtil.Run
SystemUtil.Run "excel.exe"

' Wait for Excel to open
While Not Window("regexpwndtitle:=.*Excel").Exist
    Wait 1
Wend

' Get the Excel window handle (HWND)
hwnd = Window("regexpwndtitle:=.*Excel").GetROProperty("hwnd")

' Maximize the Excel window using Windows API
ShowWindow hwnd, SW_MAXIMIZE
