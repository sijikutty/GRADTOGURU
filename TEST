' Subroutine to set up a connection with Rally server
Sub SetupRallyConnection(server, user, api_key, workspace, project)
    On Error Resume Next
    Dim rally
    
    ' Create Rally object
    Set rally = CreateObject("Rally.RestApi")
    
    ' Connect to Rally server
    rallyUrl = "https://" & server
    rally.Authenticate user, api_key
    rally.Workspace = workspace
    rally.Project = project
    
    ' Check if connection is successful
    If Err.Number <> 0 Then
        MsgBox "Failed to establish connection to Rally."
    End If
    
    ' Return the Rally object
    Set SetupRallyConnection = rally
End Sub
