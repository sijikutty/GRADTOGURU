def find_frame_by_name_prefix(page, prefix):
    frames = page.frames  # Get all frames
    for frame in frames:
        frame_name = frame.name  # Get the name of each frame
        if frame_name and frame_name.startswith(prefix):
            return frame
    return None

def main():
    with sync_playwright() as p:
        browser = p.chromium.launch()
        page = browser.new_page()

        # Navigate to the desired URL
        page.goto('http://example.com')

        # Find the frame with a name prefix
        frame_prefix = 'ptModFrame_'
        frame = find_frame_by_name_prefix(page, frame_prefix)
        
        if frame:
            # Perform actions inside the found frame
            frame_locator = frame.locator('label:has-text("Server Name")')
            if frame_locator.is_visible():
                frame_locator.select_option("PSUNX")
                print("Option selected")
            else:
                print("Label not found in the frame")
        else:
            print("Frame with the specified prefix not found")

        # Close the browser
        browser.close()
